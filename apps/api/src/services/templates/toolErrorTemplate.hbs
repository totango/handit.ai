  <style>
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      background-color: #01292f;
      color: #ffffff;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 40px 20px;
    }
    .header {
      text-align: center;
      margin-bottom: 40px;
      padding: 20px;
      border-radius: 16px;
      background: linear-gradient(180deg, rgba(2, 247, 170, 0.1) 0%, rgba(2, 247, 170, 0) 100%);
    }
    .header h1 {
      color: #02f7aa;
      margin: 0;
      font-size: 32px;
      font-weight: 600;
    }
    .content {
      background: #01292f;
      border-radius: 16px;
      padding: 40px;
      margin-bottom: 30px;
      border: 1px solid rgba(2, 247, 170, 0.3);
      box-shadow: 0 4px 12px rgba(2, 247, 170, 0.1);
    }
    .main-message {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
      text-align: center;
      color: #02f7aa;
    }
    .error-info {
      background: rgba(1, 41, 47, 0.5);
      border-radius: 12px;
      padding: 24px;
      margin: 30px 0;
      border: 1px solid rgba(2, 247, 170, 0.2);
    }
    .error-info p {
      margin: 16px 0;
      font-size: 15px;
      color: #ffffff;
    }
    .error-details {
      background: rgba(255, 59, 48, 0.1);
      border-radius: 8px;
      padding: 16px;
      margin: 16px 0;
      border: 1px solid rgba(255, 59, 48, 0.2);
      font-family: monospace;
      white-space: pre-wrap;
      color: #ff3b30;
    }
    .label {
      font-weight: 500;
      color: #02f7aa;
      margin-right: 8px;
    }
    .button {
      display: inline-block;
      background-color: #02f7aa;
      color: #ffffff !important;
      text-decoration: none;
      padding: 14px 28px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 15px;
      margin-top: 30px;
      transition: all 0.2s ease;
    }
    .button:hover {
      background-color: #00e69c;
      color: #01292f !important;
      text-decoration: none;
      transform: translateY(-1px);
    }
    .description {
      text-align: center;
      font-size: 16px;
      color: #ffffff;
      margin: 20px 0 40px;
      line-height: 1.6;
    }
    .footer {
      text-align: center;
      font-size: 14px;
      color: #01292f;
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid rgba(2, 247, 170, 0.2);
    }
    .footer a {
      color: #01292f;
      text-decoration: none;
      transition: color 0.2s ease;
    }
    .footer a:hover {
      color: #01292f;
    }
    /* Mobile Optimization */
    @media screen and (max-width: 600px) {
      .container {
        padding: 20px;
      }
      .content {
        padding: 24px;
      }
      .main-message {
        font-size: 20px;
      }
      .button {
        padding: 12px 20px;
        font-size: 14px;
        width: 100%;
        text-align: center;
      }
      .error-info {
        padding: 16px;
      }
    }
  </style>
